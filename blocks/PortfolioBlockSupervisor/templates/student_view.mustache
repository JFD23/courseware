{{#show_note}}
    <div style="border-left: 3px solid #e74c3c; padding-left: 20px;" class="eportfolio-note-header">

        <div class="header-left">
            <h3>Supervisor-Notiz</h3>
        </div>

        <div class="header-right">
            <div id="eportfolioblock-block" class="eportfolio-note-header-icon">

            </div>
        </div>

        <div class="" style="clear:both;"></div>

        <div class="content eportfolioBlock ePortfolioContent">{{{content}}}</div>
        {{^supervisor}}
            <h4>Notiz des Supervisors:</h4>
            <div class="content eportfolioBlock ePortfolioContent">{{{supervisorcontent}}}</div>
        {{/supervisor}}
        {{#supervisor}}
            {{#supervisorcontentstored}}
                <div class="messagebox messagebox_success supervisorcontentstored">Notiz gespeichert</div>
            {{/supervisorcontentstored}}
            <textarea class="add_toolbar wysiwyg" name=supervisorcontent placeholder="Geben Sie hier Ihren Text ein">{{{supervisorcontent}}}</textarea>
            <div class="cw-button-box">
            <button name=save class=button>Speichern</button>
        {{/supervisor}}    
    </div>
{{/show_note}}
